<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary band color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary band color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        Status bar color-->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

    </style>

    <style name="AppThemeSplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary band color -->
        <item name="colorPrimary">@color/splash</item>
